# Copy this file to .env and fill in your credentials
# cp env.template .env

# Appointy Login Credentials
APPOINTY_EMAIL=your-email@example.com
APPOINTY_PASSWORD=your-password

# The booking URL for your location
APPOINTY_BOOKING_URL=https://mathnasium-booking.appointy.com/portlandme/my-bookings

# Server config (local dev only)
PORT=3000

# Optional: Calendar name shown in your calendar app
CALENDAR_NAME=Mathnasium Appointments

# Secret token to protect your calendar feed
# Generate one with: node -e "console.log(require('crypto').randomBytes(24).toString('hex'))"
CALENDAR_TOKEN=

# Browserless.io API token (required for Vercel deployment)
# Get a FREE API key at https://browserless.io (1000 requests/month free)
BROWSERLESS_TOKEN=
